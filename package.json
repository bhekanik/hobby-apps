{
  "name": "hobby-apps",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -e .env -- turbo run dev",
    "dev:prod": "dotenv -e .env.prod -- turbo run dev",
    "build": "turbo run build",
    "lint-staged": "turbo run lint-staged",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "prettier": "turbo run prettier",
    "flush-packages": "rimraf -rf **/*/node_modules **/*/package-lock.json **/*/pnpm-lock.yaml node_modules package-lock.json pnpm-lock.yaml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhekanik/hobby-apps.git"
  },
  "devDependencies": {
    "fixtures": "workspace:1.0.0",
    "formatters": "workspace:1.0.0",
    "husky": "^7.0.4",
    "rimraf": "^3.0.2",
    "turbo": "^1.6.3",
    "types": "workspace:1.0.0",
    "utils": "workspace:1.0.0"
  },
  "author": "Bhekani Khumalo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bhekanik/hobby-apps/issues"
  },
  "homepage": "https://github.com/bhekanik/hobby-apps#readme",
  "dependencies": {
    "dotenv-cli": "^6.0.0"
  }
}